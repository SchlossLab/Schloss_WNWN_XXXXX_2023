  shell:
    """
   {input.R} {input.rds}
    """

rule sim_transform_edger:
  input:
    R="workflow/scripts/transform_edgeR.R",
    rds="{slug}.RDS"
  output:
    "{slug}.{edger_method}.RDS"
  wildcard_constraints:
    edger_method="upperquartile|TMM|RLE"
  group:
    "transform"
  conda:
    "envs/nr-s1.yml"
  shell:
    """
    {input.R} {input.rds} {wildcards.edger_method}
    """

