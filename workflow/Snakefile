    "filter"
  conda:
    "envs/nr-s1.yml"
  shell:
    """
    {input.R} {input.rds} {output}
    """

rule sim_transform_none:
  input:
    rds="{slug}.RDS"
  output:
    rds="{slug}.none.RDS"
  group:
    "transform"
  conda:
    "envs/nr-s1.yml"
  shell:
    """
    cp {input.rds} {output.rds}
    """

rule sim_transform_proportions:
  input:
