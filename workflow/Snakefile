rule generate_gp:
  input:
    R="workflow/scripts/generate_gp.R"
  output:
    "data/gp/{distribution}/{frac}_{depth}.nofilter.RDS"
  group:
    "generate"
  conda:
    "envs/nr-s1.yml"
  shell:
    """
      {input.R} {wildcards.frac} {wildcards.depth} {wildcards.distribution} {reps}
    """

rule generate_log:
  input:
    R="workflow/scripts/generate_log.R"
